<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_0"
            android:layout_weight="0.3"
            android:background="@color/accent"
            android:elevation="@dimen/elevation_low">

            <ImageButton
                android:id="@+id/shared_avatar_view"
                style="@style/AvatarStyle"
                android:layout_width="@dimen/fab_avatar_size_expanded"
                android:layout_height="@dimen/fab_avatar_size_expanded"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_padding_margin"
                android:transitionName="@string/transition_name"/>

            <com.example.kuassivi.material_chooseyouravatar.GalleryView
                android:id="@+id/avatar_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <com.example.kuassivi.material_chooseyouravatar.AutofitRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_0"
            android:layout_weight="0.7"
            android:clipToPadding="false"
            android:columnWidth="@dimen/grid_column_width"
            android:padding="@dimen/default_padding_margin"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FabStyle"/>

</FrameLayout>